<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="controllers.CheckoutController" spacing="20" 
      style="-fx-padding: 25; -fx-background-color: #f8f9fa;">
    
    <Label text="Checkout" 
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    <VBox spacing="15">
        <Label text="Order Summary:" 
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
        
        <VBox fx:id="orderSummary" spacing="5" 
              style="-fx-padding: 10; -fx-background-color: white; 
                     -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;"/>
        
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Label text="Total:" 
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="totalLabel" text="$0.00" 
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
        </HBox>
        
        <Separator/>
        
        <Label fx:id="paymentMethodLabel" text="Payment Method: " 
               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
        
        <Label text="Shipping Information:" 
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
        
        <GridPane hgap="15" vgap="10" style="-fx-padding: 15; -fx-background-color: white; 
                  -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8;">
            
            <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" 
                   style="-fx-font-weight: bold;"/>
            <TextField fx:id="fullNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" 
                       prefWidth="250"/>
            
            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" 
                   style="-fx-font-weight: bold;"/>
            <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0" 
                   style="-fx-font-weight: bold;"/>
            <TextField fx:id="phoneField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            
            <Label text="Shipping Address:" GridPane.rowIndex="3" GridPane.columnIndex="0" 
                   style="-fx-font-weight: bold;"/>
            <TextArea fx:id="addressField" GridPane.rowIndex="3" GridPane.columnIndex="1" 
                      prefRowCount="3" prefWidth="250" wrapText="true"/>
            
        </GridPane>
        
        <Label fx:id="errorLabel" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold; 
               -fx-background-color: #ffeaea; -fx-padding: 10; -fx-border-color: #e74c3c; 
               -fx-border-radius: 5; -fx-background-radius: 5;" visible="false"/>
        
    </VBox>
    
</VBox>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AddAdminController">
    
    <padding>
        <Insets bottom="30" left="50" right="50" top="30" />
    </padding>
    
    <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="CREATE NEW ADMIN" />
    
    <ScrollPane fitToWidth="true" prefHeight="400">
        <VBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: white; -fx-padding: 30; -fx-border-color: #ddd; -fx-border-radius: 10;">
            
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #3498db;" text="Admin Information" />
            
            <HBox spacing="10">
                <VBox spacing="5">
                    <Label style="-fx-font-size: 12px;" text="First Name:*" />
                    <TextField fx:id="firstNameField" prefWidth="200" promptText="Enter first name" />
                </VBox>
                <VBox spacing="5">
                    <Label style="-fx-font-size: 12px;" text="Last Name:*" />
                    <TextField fx:id="lastNameField" prefWidth="200" promptText="Enter last name" />
                </VBox>
            </HBox>
            
            <Label style="-fx-font-size: 12px;" text="Email Address:*" />
            <TextField fx:id="emailField" prefWidth="410" promptText="Enter email address" />
            
            <Label style="-fx-font-size: 12px;" text="Username:*" />
            <TextField fx:id="usernameField" prefWidth="410" promptText="Choose username" />
            
            <HBox spacing="10">
                <VBox spacing="5" />
                <VBox spacing="5" />
            </HBox>
            
            <Label fx:id="errorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;" visible="false" />
            
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="registerBtn" onAction="#handleAddAdmin" prefHeight="40" prefWidth="120" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" text="Add Admin" />
                
                <Button fx:id="backBtn" onAction="#handleBack" prefHeight="40" prefWidth="120" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Back " />
            </HBox>
            
        </VBox>
    </ScrollPane>
    
</VBox>

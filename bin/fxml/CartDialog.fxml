<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<DialogPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
            fx:controller="controllers.CartDialogController">
    <content>
        <VBox spacing="15" style="-fx-padding: 10;">
            <Label text="ðŸ›’ Your Shopping Cart" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            
            <!-- Cart Table -->
            <TableView fx:id="cartTable" prefHeight="300" style="-fx-background-color: white;">
                <columns>
                    <TableColumn text="Product" fx:id="productColumn" prefWidth="200"/>
                    <TableColumn text="Price" fx:id="priceColumn" prefWidth="100"/>
                    <TableColumn text="Quantity" fx:id="quantityColumn" prefWidth="100"/>
                    <TableColumn text="Total" fx:id="totalColumn" prefWidth="100"/>
                    <TableColumn text="Action" fx:id="actionColumn" prefWidth="100"/>
                </columns>
            </TableView>
            
            <!-- Summary Section -->
            <VBox spacing="5" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-border-radius: 8;">
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Label text="Subtotal:" style="-fx-font-size: 14px;"/>
                    <Label fx:id="subtotalLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Label text="Shipping:" style="-fx-font-size: 14px;"/>
                    <Label fx:id="shippingLabel" style="-fx-font-size: 14px;"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Label text="Total:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label fx:id="totalLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                </HBox>
            </VBox>
            
            <!-- Buttons -->
            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Button text="Continue Shopping" onAction="#continueShopping" 
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
                <Button text="Clear Cart" onAction="#clearCart" 
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                <Button text="ðŸš€ Checkout" onAction="#proceedToCheckout" 
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </content>
</DialogPane>